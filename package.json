{
  "name": "service-catalogue",
  "version": "0.0.1",
  "description": "A lens into your GitHub organisation",
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "synth": "npm run synth --workspace=cdk",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "lint": "eslint packages/** --ext .ts --no-error-on-unmatched-pattern"
  },
  "author": "Guardian Developers",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@guardian/eslint-config-typescript": "5.0.0",
    "@guardian/prettier": "5.0.0",
    "@guardian/tsconfig": "^0.2.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.2",
    "eslint-plugin-prettier": "^5.0.0"
  },
  "dependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "extends": "@guardian/eslint-config-typescript",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "eslintIgnore": [
    "packages/common/dist"
  ],
  "prettier": "@guardian/prettier"
}
