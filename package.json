{
	"name": "service-catalogue",
	"version": "0.0.1",
	"description": "A lens into your GitHub organisation",
	"scripts": {
		"test": "npm run test --workspaces --if-present",
		"test-update": "jest -u",
		"synth": "npm run synth --workspace=cdk",
		"pretypecheck": "npm -w common run typecheck",
		"typecheck": "npm run typecheck --workspaces",
		"build": "npm run build --workspaces --if-present",
		"lint": "eslint packages/** --ext .ts,.tsx --no-error-on-unmatched-pattern"
	},
	"author": "Guardian Developers",
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@guardian/eslint-config-typescript": "10.0.1",
		"@guardian/prettier": "8.0.1",
		"@guardian/tsconfig": "^0.3.1",
		"@swc/jest": "^0.2.36",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.12.10",
		"dotenv": "^16.4.5",
		"esbuild": "^0.21.3",
		"eslint": "^8.57.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-unicorn": "^53.0.0",
		"jest": "^29.7.0",
		"npm-run-all": "^4.1.5",
		"tsx": "^4.11.0",
		"typescript": "5.3.3"
	},
	"eslintConfig": {
		"extends": "@guardian/eslint-config-typescript",
		"plugins": [
			"prettier",
			"unicorn"
		],
		"rules": {
			"prettier/prettier": "error",
			"@typescript-eslint/no-non-null-assertion": "error",
			"unicorn/prefer-array-flat-map": "error"
		},
		"overrides": [
			{
				"files": [
					"packages/dashboard/**"
				],
				"extends": [
					"./packages/dashboard/.eslintrc"
				]
			}
		]
	},
	"eslintIgnore": [
		"packages/common/dist"
	],
	"prettier": "@guardian/prettier"
}
